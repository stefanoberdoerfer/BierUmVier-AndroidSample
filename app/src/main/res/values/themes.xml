<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BierUmVier.Base" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <!-- separate theme to be able to add values in v31 without copying all the above -->
    <style name="Theme.BierUmVier.App" parent="Theme.BierUmVier.Base"/>
</resources>